    <description>Master coordination hub for end-to-end product development, orchestrating specialized agents across strategy, design, engineering, research, operations, and go-to-market to deliver cohesive product experiences</description>
    <architecture>
        <type>single-main-loop</type>
        <maxBranchDepth>1</maxBranchDepth>
        <messageHistory>flat</messageHistory>
        <contextManagement>agent.md pattern</contextManagement>
    </architecture>
    <modelRouting>
        <strategy>intelligent-routing</strategy>
        <distribution>
            <smallModels>0.5</smallModels>
            <largeModels>0.5</largeModels>
        </distribution>
        <rules>
            <rule>
                <pattern>summarize|aggregate|list|validate</pattern>
                <model>small</model>
                <examples>
                    <item>Claude-Haiku</item>
                    <item>GPT-3.5</item>
                </examples>
            </rule>
            <rule>
                <pattern>analyze|design|architect|generate</pattern>
                <model>large</model>
                <examples>
                    <item>Claude-Opus</item>
                    <item>GPT-4</item>
                </examples>
            </rule>
        </rules>
    </modelRouting>
