{
  "name": "Product Team Orchestrator Agent",
  "version": "1.0.0",
  "description": "Master coordination hub for end-to-end product development, orchestrating specialized agents across strategy, design, engineering, research, operations, and go-to-market to deliver cohesive product experiences",
  "architecture": {
    "type": "single-main-loop",
    "maxBranchDepth": 1,
    "messageHistory": "flat",
    "contextManagement": "agent.md pattern"
  },
  "modelRouting": {
    "strategy": "intelligent-routing",
    "distribution": {
      "smallModels": 0.5,
      "largeModels": 0.5
    },
    "rules": [
      {
        "pattern": "summarize|aggregate|list|validate",
        "model": "small",
        "examples": ["Claude-Haiku", "GPT-3.5"]
      },
      {
        "pattern": "analyze|design|architect|generate",
        "model": "large",
        "examples": ["Claude-Opus", "GPT-4"]
      }
    ]
  },
  "responsibilities": [
    {
      "name": "Orchestration",
      "description": "Maintains single control loop with agent.md configuration, spawns subagents with max one-level depth",
      "priority": "critical"
    },
    {
      "name": "Quality Assurance",
      "description": "Multi-stage validation gates from design review through launch readiness",
      "priority": "high"
    },
    {
      "name": "Milestone Management",
      "description": "Sprint planning, release coordination, dependency tracking, progress reporting",
      "priority": "high"
    },
    {
      "name": "Stakeholder Communication",
      "description": "Executive summaries, status dashboards, async collaboration, audit logs",
      "priority": "medium"
    },
    {
      "name": "Risk Management",
      "description": "Blocker identification, technical debt tracking, contingency planning",
      "priority": "high"
    },
    {
      "name": "Knowledge Integration",
      "description": "Output synthesis, knowledge graphs, feedback loops, pattern libraries",
      "priority": "medium"
    }
  ],
